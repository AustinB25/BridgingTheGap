@model BridgingTheGap.WebMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
    Layout = "~/Views/Shared/_BTGLayout.cshtml";
}

<h2>Register Role</h2>

@using (Html.BeginForm("RegisterRole", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()   
        <h4>Assign a role to a user</h4>
        <hr/>
        @Html.ValidationSummary("", new { @class = "text-danger"})
            <div class="form-group">
                @Html.Label("Select Role", new { @class = "col-md-2 control-label"})
                <div class="col-md-10">
                    @Html.DropDownList("UserName")
                </div>
             </div>
             <div class=" form-group">
                 @Html.Label("Select User", new { @class = "col-md-2 control-label" })
                 <div class="col-md-10">
                     @Html.DropDownList("Name")
                 </div>
             </div>
             <div class="form-group">
                 <div class="col-md-offset-2 col-md-10">
                     <input type="submit" class=" btn btn-primary" value="Register"/>
                 </div>
             </div>    
}
